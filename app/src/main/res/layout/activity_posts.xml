<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.higheraltitude.prizm.PostsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        >
        <ImageButton
            android:id="@+id/action_close_button"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:layout_width="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textAllCaps="false"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/close_cancel_white_icon"
            android:scaleType="center"
            android:layout_marginRight="5.7dp"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/filter_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_aspiration"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="aspirationsButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_passion"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="passionButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_experience"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="experienceButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_achievement"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="achievementButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_inspiration"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="inspirationButtonClicked"
            />
        <ImageButton
            android:id="@+id/private_filter_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_private"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="privateButtonClicked"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hashtag_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="46dp">
        <ImageView
            android:id="@+id/grid_button"
            android:layout_width="23.3dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13dp"
            android:src="@drawable/grid_view_selected"
            android:layout_gravity="center_vertical"
            android:onClick="gridButtonClicked"
            android:scaleType="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="19.3dp"
            android:background="@color/warm_grey_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22.7dp"/>
        <ImageView
            android:id="@+id/full_button"
            android:layout_width="23.3dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="22.3dp"
            android:src="@drawable/full_view"
            android:scaleType="center"
            android:onClick="cardButtonClicked"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/count_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_size_regular"
            android:layout_marginRight="19dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:indeterminateDuration="800"
            android:elevation="4dp"
            android:indeterminate="true"/>
        <GridView
            android:id="@+id/grid_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:numColumns="3"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:stretchMode="columnWidth"/>
        <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent" />
    </RelativeLayout>


</LinearLayout>
