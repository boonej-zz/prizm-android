<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.higheraltitude.prizm.PostsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_aspiration"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="aspirationsButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_passion"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="passionButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_experience"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="experienceButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_achievement"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="achievementButtonClicked"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_inspiration"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="inspirationButtonClicked"
            />
        <ImageButton
            android:id="@+id/private_filter_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_toggle_private"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="privateButtonClicked"
            android:visibility="gone"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:indeterminateDuration="800"
            android:elevation="4dp"
            android:indeterminate="true"/>
        <GridView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:numColumns="3"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:stretchMode="columnWidth"/>
    </RelativeLayout>


</LinearLayout>
