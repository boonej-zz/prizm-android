<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.higheraltitude.prizm.Registration"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_height="116.7dp"
        android:layout_width="94dp"
        android:layout_marginTop="71dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/prizmlogo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18.7sp"
        android:text="Connect with"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/prizm_light_navy"
        android:layout_marginTop="67.3dp"
        />
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41.7dp">
        <ImageButton
            android:contentDescription="@string/cd_facebook"
            android:id="@+id/facebook_login_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_facebook"
            android:layout_gravity="center_vertical"
            />
        <ImageButton
            android:contentDescription="@string/cd_facebook"
            android:id="@+id/dummy_twitter_login_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="79dp"
            android:src="@drawable/btn_twitter"
            android:layout_gravity="center_vertical"
            />

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="77.3dp"
            android:layout_height="76.3dp"
            android:layout_marginLeft="79dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.7dp">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/prizm_grey"
            android:layout_marginLeft="39.3dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/prizm_light_navy"

            android:text="or" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/prizm_grey"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="39.3dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp">
        <Button
            android:layout_width="125.3dp"
            android:layout_height="52dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:onClick="onLoginClick"
            android:text="Log In"/>
        <Button
            android:layout_width="125.3dp"
            android:layout_height="52dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Sign Up"
            android:onClick="onSignupClick"
            android:layout_marginLeft="30.7dp"/>
    </LinearLayout>






</LinearLayout>
