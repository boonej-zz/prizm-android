<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.UserAvatarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="40dp"
            android:layout_height="39.7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8.7dp"
            android:layout_marginBottom="8.7dp"
            android:layout_marginLeft="18.3dp"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16.7sp"
            android:textColor="@color/brownish_grey" />
        <ImageView
            android:id="@+id/user_toggle"
            android:layout_width="21.3dp"
            android:layout_height="21.3dp"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:layout_marginRight="26dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</co.higheraltitude.prizm.views.UserAvatarView>