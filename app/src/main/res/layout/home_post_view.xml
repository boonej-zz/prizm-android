<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.HomePostView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9.7dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"

        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:background="@android:color/white"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/avatar_view"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:src="@drawable/user_missing_avatar"
                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63.3dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/creator_name"
                    android:textSize="16sp"
                    android:textColor="@color/brownish_grey"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/time_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_text"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/brownish_grey"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9.7dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="right">
                <ImageView
                    android:id="@+id/category_image"
                    android:layout_width="17.3dp"
                    android:layout_height="17.3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/checkmarksm" />
                <TextView
                    android:id="@+id/post_via_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="@color/pinkish_grey"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/post_image_view"
            android:layout_width="fill_parent"
            android:layout_height="340dp"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@android:color/white"
            android:layout_height="62dp">
            <LinearLayout
                android:id="@+id/likes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/likes_image"
                    android:layout_width="20dp"
                    android:layout_height="18.4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/likes_count"
                    android:layout_marginLeft="5.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="13.3sp"
                    android:textColor="@color/brownish_grey"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85.3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chat_bubble_outline_black_24_px"
                    />
                <TextView
                    android:id="@+id/comment_count"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="13.3sp"
                    android:textColor="@color/brownish_grey"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="22.7dp"
                android:layout_height="22.7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_repeat_black_24_px_2"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="17.3dp"
                android:layout_height="17.3dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="82.7dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="23.3dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_location_on_black_24_px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />

        </RelativeLayout>
    </LinearLayout>

</co.higheraltitude.prizm.views.HomePostView>
