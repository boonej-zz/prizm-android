<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.PeepView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"
        android:paddingBottom="18dp">
        <ImageView
            android:id="@+id/peep_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="4.7dp"
            android:layout_marginLeft="18.3dp"
            android:src="@drawable/user_missing_avatar"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/peep_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="@color/brownish_grey"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/time_icon"
                    android:layout_gravity="center_vertical"
                    android:elevation="0dp"
                    />
                <TextView
                    android:id="@+id/peep_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.7dp"
                    android:textSize="12sp"
                    android:textColor="@color/brownish_grey"
                    android:text="45 min ago"
                    />
                <LinearLayout
                    android:id="@+id/peep_viewed_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:layout_marginLeft="14dp">
                    <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/ic_remove_red_eye_black_24_px_2"/>
                    <TextView
                        android:id="@+id/peep_viewed_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.3dp"
                        android:textSize="12sp"
                        android:textColor="@color/brownish_grey"
                        android:text="10"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp">
                <co.higheraltitude.prizm.views.PeepImageView
                    android:id="@+id/peep_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/peep_text"
                    android:autoLink="all"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="@color/brownish_grey"
                    android:fontFamily="sans-serif-light"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/likes_area"
            android:layout_width="52.7dp"
            android:layout_height="fill_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="left|top"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/peep_like_button"
                android:layout_width="20dp"
                android:layout_height="16.7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:src="@drawable/like"
                />
            <TextView
                android:id="@+id/peep_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_size_regular"
                android:textColor="@color/brownish_grey"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="4dp"
                android:text="5"

                />


        </LinearLayout>
    </LinearLayout>

</co.higheraltitude.prizm.views.PeepView>
