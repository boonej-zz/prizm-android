<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/profile_nav_bar"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="6dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:id="@+id/activity_button"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.4dp"
                android:layout_marginTop="-4dp"
                
                android:layout_gravity="right|center_vertical">
                <ImageView
                    android:layout_width="14.7dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/activity"/>
                <TextView
                    android:id="@+id/activity_count_badge"
                    android:layout_width="16.6dp"
                    android:layout_height="16.6dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"

                    android:background="@drawable/circle_badge"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <co.higheraltitude.prizm.views.PrizmViewPager
            android:id="@+id/main_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout android:id="@+id/left_drawer"
        android:layout_width="299.3dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="172.7dp">
            <ImageView
                android:id="@+id/menu_cover_view"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:onClick="profileClicked"
                />
            <ImageView
                android:id="@+id/menu_overlay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/OverlayStyle"/>
            <ImageView
                android:id="@+id/menu_avatar_view"
                android:layout_width="57.3dp"
                android:layout_height="57.3dp"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/user_missing_avatar"
                android:clickable="true"
                android:onClick="profileClicked"
                />
            <TextView
                android:id="@+id/menu_name"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="122.5dp"
                android:layout_marginLeft="21.3dp"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ListView
            android:cacheColorHint="#00000000"
            android:id="@+id/menu_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:fastScrollEnabled="false"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
