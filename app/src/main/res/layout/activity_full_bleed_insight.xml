<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="co.higheraltitude.prizm.FullBleedInsight">
    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/avatar_view"
                    android:layout_marginLeft="13dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/user_missing_avatar"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:id="@+id/creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="16sp"
                    android:width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/brownish_grey"
                    android:ellipsize="end"
                    />

                <ImageButton
                    android:id="@+id/dislike_button"
                    android:src="@drawable/insight_cancel_icon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:onClick="onDislikeClick"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="27.3dp"/>
                <ImageButton
                    android:id="@+id/like_button"
                    android:src="@drawable/insight_check_icon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:onClick="onLikeClick"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15.3dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:onClick="onImageAreaClick"
                android:layout_height="360dp">
                <ImageView
                    android:id="@+id/post_image_view"
                    android:layout_width="fill_parent"
                    android:layout_height="360dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/hash_tag_view"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:background="@color/pale_grey"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="@dimen/font_size_regular"
                android:textColor="@color/cloudy_blue"

                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="69dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/insight_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="60dp"
                    android:textSize="16sp"
                    android:textColor="@color/brownish_grey"
                    android:layout_gravity="center_vertical"
                    />
                <ImageButton
                    android:layout_width="21.7dp"
                    android:layout_height="21.7dp"
                    android:src="@drawable/insight_share_icon"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="25dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="23.3dp"
                android:background="@color/pale_grey"
                android:textColor="@color/warm_grey"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/activity_insight"
                />
            <TextView
                android:id="@+id/insight_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/brownish_grey"
                android:layout_marginTop="19.3dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="25dp"/>
            <TextView
                android:id="@+id/insight_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="25dp"
                android:textSize="16sp"
                android:textColor="@color/cool_blue"
                android:onClick="onLinkClick"
                android:layout_marginBottom="60dp"
                />



        </LinearLayout>

    </ScrollView>

</LinearLayout>
