<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.UserFollowingAvatarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="40dp"
            android:layout_height="39.7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8.7dp"
            android:layout_marginBottom="8.7dp"
            android:layout_marginLeft="18.3dp"
            android:src="@drawable/user_missing_avatar"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16.7sp"
            android:textColor="@color/brownish_grey" />
        <RelativeLayout
            android:id="@+id/user_follow_button"
            android:layout_width="64dp"
            android:layout_marginRight="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/user_follow"
                android:layout_width="wrap_content"
                android:src="@drawable/follow_icon"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>
    </LinearLayout>

</co.higheraltitude.prizm.views.UserFollowingAvatarView>