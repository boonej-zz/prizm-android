<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.higheraltitude.prizm.fragments.ProfileMainFragment"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="23dp">
        <ImageView
            android:id="@+id/profile_avatar_photo"
            android:layout_width="85dp"
            android:layout_height="83.4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_missing_avatar"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:id="@+id/name_area"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="3.8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                />
            <ImageView
                android:id="@+id/avatar_badge"
                android:layout_width="21dp"
                android:layout_height="20.7dp"
                android:layout_marginLeft="4.2dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_location_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location_pin"
                />
            <TextView android:id="@+id/profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.2dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
