<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.InsightCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9.7dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"

        android:elevation="4dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/avatar_view"
                android:layout_marginLeft="13dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/user_missing_avatar"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:textSize="16sp"
                android:width="0dp"
                android:layout_weight="1"
                android:textColor="@color/brownish_grey"
                android:ellipsize="end"
                />

            <ImageButton
                android:id="@+id/dislike_button"
                android:src="@drawable/insight_cancel_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="27.3dp"/>
            <ImageButton
                android:id="@+id/like_button"
                android:src="@drawable/insight_check_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15.3dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="340dp">
            <ImageView
                android:id="@+id/post_image_view"
                android:layout_width="fill_parent"
                android:layout_height="340dp"
                />
            <TextView
                android:id="@+id/hash_tag_view"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cover_gradient"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="@dimen/font_size_regular"
                android:textColor="@color/cloudy_blue"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:textColor="@color/brownish_grey"
                android:textSize="16sp"
                android:layout_marginTop="13.7dp"


                />
            <ImageButton
                android:src="@drawable/insight_share_icon"
                android:layout_width="21.7dp"
                android:layout_height="21.7dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15.3dp"
                android:layout_marginTop="27.3dp"
                android:layout_marginBottom="19dp"

                />
            <TextView
                android:id="@+id/link_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.7dp"
                android:layout_marginLeft="13dp"
                android:textSize="16dp"
                android:layout_below="@id/title_view"

                android:layout_marginBottom="19dp"
                android:textColor="@color/cool_blue"
                />


        </RelativeLayout>
    </LinearLayout>

</co.higheraltitude.prizm.views.InsightCardView>