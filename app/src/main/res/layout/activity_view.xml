<?xml version="1.0" encoding="utf-8"?>
<co.higheraltitude.prizm.views.ActivityView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:minHeight="80dp" android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_missing_avatar"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="4.7dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notification_from"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="@color/brownish_grey"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/time_icon"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/notification_time_ago"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/brownish_grey"
                    android:text="35m ago"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.7dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/notification_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brownish_grey"
                android:textSize="14.7sp"
                android:fontFamily="sans-serif-light"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/notification_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

</co.higheraltitude.prizm.views.ActivityView>
