<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_grey"
        android:orientation="vertical"
        android:layout_marginTop="40.7dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="36dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/PrizmRegistrationHintTextStyle"
            >
            <EditText
                android:id="@+id/registration_field_first"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="text"
                android:hint="Organization" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/registration_info_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_info"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="text"
                android:hint="Info" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_website"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="textUri"
                android:hint="Website" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_date_founded"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"

                android:textCursorDrawable="@drawable/cursor"
                android:inputType="date"
                android:hint="Date Founded" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_mascot"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="text"
                android:hint="Mascot" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_population"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="number"
                android:hint="Population" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.5dp"
            android:text="Private"
            android:textColor="@color/cool_blue"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8.5dp"
            android:textStyle="bold"
            android:textSize="12.0sp"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_email"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:textSize="12.6sp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_zipcode"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:inputType="number"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="Zip Code" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_phone"
                android:layout_width="fill_parent"
                android:textSize="12.6sp"
                android:layout_height="44dp"
                android:textCursorDrawable="@drawable/cursor"
                android:inputType="phone"
                android:hint="Phone Number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_contact_first"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:inputType="date"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="Contact First Name" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_contact_last"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="Contact Last Name" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/PrizmRegistrationHintTextStyle">
            <EditText
                android:id="@+id/registration_field_contact_email"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:textSize="12.6sp"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="Contact Last Name" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/registration_button_save"
            android:background="@drawable/button_blue"
            android:layout_width="fill_parent"
            android:layout_marginLeft="34.7dp"
            android:layout_marginRight="33.3dp"
            android:layout_marginTop="36dp"
            android:layout_height="52dp"
            android:text="@string/action_save"
            />



    </LinearLayout>

</LinearLayout>