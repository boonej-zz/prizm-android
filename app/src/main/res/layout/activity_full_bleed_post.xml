<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="co.higheraltitude.prizm.FullBleedPostActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:id="@+id/comments_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:focusable="true"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/author_area"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:background="@android:color/white"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/avatar_view"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_missing_avatar"
                    android:scaleType="fitCenter"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63.3dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/creator_name"
                        android:textSize="16sp"
                        android:textColor="@color/brownish_grey"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/time_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date_text"
                            android:textSize="12sp"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/brownish_grey"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9.7dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/category_image"
                        android:layout_width="17.3dp"
                        android:layout_height="17.3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/checkmarksm" />
                    <TextView
                        android:id="@+id/post_via_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="@color/pinkish_grey"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/post_area"
                android:layout_below="@id/author_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/post_image_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="340dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/hash_tag_view"
                    android:layout_width="fill_parent"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/cover_gradient"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textSize="@dimen/font_size_regular"
                    android:textColor="@color/cloudy_blue"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/info_area"
                android:layout_below="@+id/post_area"
                android:layout_width="fill_parent"
                android:background="@android:color/white"
                android:layout_height="62dp">
                <LinearLayout
                    android:id="@+id/likes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/likes_image"
                        android:layout_width="20dp"
                        android:layout_height="18.4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/like"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/likes_count"
                        android:layout_marginLeft="5.3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="13.3sp"
                        android:textColor="@color/brownish_grey"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="85.3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chat_bubble_outline_black_24_px"
                        />
                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="13.3sp"
                        android:textColor="@color/brownish_grey"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="22.7dp"
                    android:layout_height="22.7dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_repeat_black_24_px_2"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:layout_width="17.3dp"
                    android:layout_height="17.3dp"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="82.7dp"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_location_on_black_24_px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/comment_title"
                android:layout_below="@+id/info_area"
                android:layout_width="fill_parent"
                android:layout_height="23.3dp"
                android:gravity="center"
                android:textSize="@dimen/font_size_regular"
                android:background="@color/pale_grey"
                android:textColor="@color/warm_grey"
                android:text="@string/title_comments"/>
            <LinearLayout
                android:id="@+id/post_text_area"
                android:layout_below="@id/comment_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="12.2dp"
                android:paddingBottom="13.7dp"
                android:background="@drawable/bkg_bottom_border_white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/post_text_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="23.3dp"
                    android:src="@drawable/user_missing_avatar"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="19.7dp"

                    >
                    <TextView
                        android:id="@+id/post_text_creator_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/brownish_grey"

                        />
                    <TextView
                        android:id="@+id/post_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.7sp"
                        android:fontFamily="sans-serif-light"
                        android:autoLink="all"
                        android:textColor="@color/brownish_grey"
                        />
                </LinearLayout>


            </LinearLayout>
            <co.higheraltitude.prizm.handlers.NonScrollListView
                android:layout_below="@id/post_text_area"
                android:id="@+id/comments_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </co.higheraltitude.prizm.handlers.NonScrollListView>
            <LinearLayout
                android:id="@+id/edit_pane"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:paddingBottom="52dp"
                android:background="@android:color/white"
                >
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:background="@drawable/bkg_bottom_border"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_size_regular"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/action_delete_post"
                    android:fontFamily="sans-serif"
                    android:onClick="deleteButtonClicked"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:background="@drawable/bkg_bottom_border"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_size_regular"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/action_edit_post_text"
                    android:fontFamily="sans-serif"
                    android:onClick="editTextButtonClicked"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/public_scope_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="37dp"
                        android:background="?attr/selectableItemBackground"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_size_regular"
                        android:textAllCaps="false"
                        android:text="@string/visibility_public"
                        android:onClick="publicScopeClicked"
                        />
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/trust_scope_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="37dp"
                        android:background="?attr/selectableItemBackground"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_size_regular"
                        android:textAllCaps="false"
                        android:text="@string/visibility_trust"
                        android:onClick="trustScopeClicked"
                        />
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/private_scope_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="37dp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_size_regular"
                        android:background="?attr/selectableItemBackground"
                        android:textAllCaps="false"
                        android:text="@string/visibility_private"
                        android:onClick="privateScopeClicked"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="68.7dp"
                    android:orientation="horizontal">
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/aspiration_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:paddingBottom="4dp"
                        android:text="@string/category_aspiration"
                        android:textStyle="normal"
                        android:onClick="aspirationButtonClicked"
                        android:background="@drawable/btn_aspiration"/>
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/passion_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/category_passion"
                        android:background="@drawable/btn_passion"
                        android:textAllCaps="false"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="normal"
                        android:onClick="passionButtonClicked"
                        android:paddingBottom="4dp"/>
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/experience_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/category_experience"
                        android:background="@drawable/btn_experience"
                        android:textAllCaps="false"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="normal"
                        android:onClick="experienceButtonClicked"
                        android:paddingBottom="4dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="68.7dp"
                    >
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/achievement_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/category_achievement"
                        android:background="@drawable/btn_achievement"
                        android:textAllCaps="false"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="normal"
                        android:onClick="achievementButtonClicked"
                        android:paddingBottom="4dp"/>
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/inspiration_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/category_inspiration"
                        android:background="@drawable/btn_inspiration"
                        android:textAllCaps="false"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="normal"
                        android:onClick="inspirationButtonClicked"
                        android:paddingBottom="4dp"/>
                    <co.higheraltitude.prizm.custom.ToggleButton
                        android:id="@+id/private_button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/category_private"
                        android:background="@drawable/btn_private"
                        android:textAllCaps="false"
                        android:textStyle="normal"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13.3sp"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="privateButtonClicked"
                        android:paddingBottom="4dp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/post_comment_area"
                android:layout_below="@id/comments_list"
                android:layout_width="fill_parent"
                android:layout_height="51.7dp"
                android:background="@color/pale_grey"
                android:elevation="1dp"
                >
                <EditText
                    android:id="@+id/new_comment_text"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/write_icon"
                    android:drawablePadding="18.1dp"
                    android:hint="@string/action_write_comment"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp"
                    android:paddingLeft="17.7dp"
                    android:textColorHint="@color/warm_grey"
                    android:textColor="@color/brownish_grey"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    />
                <ImageButton
                    android:id="@+id/edit_post_button"
                    android:layout_width="46dp"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="center"
                    android:src="@drawable/overflow_icon"
                    android:onClick="editPostClicked"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="235.7dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/dialog_background"
        android:elevation="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">
        <ListView
            android:id="@+id/tag_picker_list"
            android:layout_width="fill_parent"
            android:divider="#00000000"
            android:layout_height="fill_parent" />
    </LinearLayout>


</RelativeLayout>
