<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="92dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ha_translucent_background_color"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/loginrow_icon_view"
        android:contentDescription="loginimage"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/loginrow_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:textSize="18dp"
        ></TextView>
    <EditText
        android:id="@+id/loginrow_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="18dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/ha_text_color"
        android:background="#00000000"
        android:textCursorDrawable="@null"

        />


</LinearLayout>
