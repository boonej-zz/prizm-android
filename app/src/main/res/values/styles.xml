<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="PrizmTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/prizm_dominant_background</item>
        <item name="android:textViewStyle">@style/PrizmTextViewStyle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:popupMenuStyle">@style/PrizmPopupStyle</item>
        <item name="popupMenuStyle">@style/PrizmPopupStyle</item>
        <item name="android:editTextStyle">@style/PrizmEditTextStyle</item>
    </style>

    <style name="PrizmRegistrationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/prizm_dominant_background</item>
        <item name="android:buttonStyle">@style/PrizmButtonBlue</item>
        <item name="colorPrimary">@color/ha_transparent_color</item>
        <item name="colorPrimaryDark">@color/grey_light_transparent</item>
        <item name="android:editTextStyle">@style/PrizmRegistrationEditTextStyle</item>
    </style>

    <style name="PrizmEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="PrizmRegistrationEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>

        <!--<item name="android:layout_marginBottom">6dp</item>-->

        <!--<item name="android:paddingBottom">17.9dp</item>-->



    </style>

    <style name="PrizmRegistrationHintTextStyle" parent="TextAppearance.AppCompat">

        <item name="android:textColorHint">@color/warm_grey</item>
        <item name="colorAccent">@color/warm_grey</item>
        <item name="colorControlNormal">@color/silver</item>
        <item name="colorControlActivated">@color/cool_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="PrizmRegistrationTab" parent="Widget.Design.TabLayout">
        <item name="android:actionBarTabTextStyle">@style/PrizmRegistrationTabText</item>
        <item name="actionBarTabTextStyle">@style/PrizmRegistrationTabText</item>
        <item name="tabSelectedTextColor">@color/light_navy</item>
        <item name="tabTextAppearance">@style/PrizmRegistrationTabText</item>
    </style>

    <style name="PrizmRegistrationTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/light_navy</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="PrizmBlue" parent="PrizmTheme">
        <item name="android:windowBackground">@color/prizm_dominant_background</item>
        <item name="colorPrimary">@color/dusk_blue</item>
        <item name="colorPrimaryDark">@color/prizm_blue_dark</item>
        <item name="colorAccent">@color/cool_blue</item>
        <item name="android:textColor">@color/prizm_light_navy</item>
        <item name="android:buttonStyle">@style/PrizmButtonBlue</item>
    </style>

