<resources>
    <item name="ha_text_color" type="color">#C0C1D5</item>
    <item name="ha_translucent_background_color" type="color">#4DFFFFFF</item>
    <item name="ha_transparent_color" type="color">#00000000</item>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_blue</item>
        <item name="android:textColor">@color/ha_text_color</item>
    </style>

    <style name="VerticalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_blue</item>
        <item name="android:textColor">@color/ha_text_color</item>

    </style>

</resources>
